{
    "collection": "users",
    "database": "PlantHealthcare",
    "roles": [
        {
            "name": "admin",
            "apply_when": {
                "%%user.custom_data.role": "admin"
            },
            "document_filters": {
                "write": true,
                "read": true
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true
        },
        {
            "name": "user",
            "apply_when": {
                "%%user.custom_data.role": "default"
            },
            "document_filters": {
                "write": {
                    "user_id": "%%user.id"
                },
                "read": {
                    "user_id": "%%user.id"
                }
            },
            "fields": {
                "role": {
                    "write": false,
                    "read": true
                }
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true
        }
    ]
}
